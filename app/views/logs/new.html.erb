
<%= form_for(@log) do |f| %>
<form>
  <div class="form-group ml-3 mr-3">
    <label for="exampleFormControlInput1">タイトル</label>
    <%= f.text_field :title,class:"form-control",id:"exampleFormControlInput1",placeholder:"タイトルを入力してください",size:15%>
  </div>

  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlInput1">投稿内容のタイプは？</label>
    <%= f.text_field :kind,class:"form-control",id:"exampleFormControlInput1",placeholder:"投稿内容のタイプを入力してください ex)提案 "%>
  </div>

  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlTextarea1">GoodPoint</label>
    <%= f.text_area :good,class:"form-control", id:"exampleFormControlTextarea1",rows:"4" %>
  </div>
    
  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlTextarea1">ChancePoint</label>
    <%= f.text_area :chance,class:"form-control", id:"exampleFormControlTextarea2",rows:"4" %>
  </div>

  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlFile1">写真</label>
    <%= f.file_field :image,class:"form-control-file",id:"exampleFormControlFile1" %>
  </div>

    <button type="submit" class="btn btn-primary  ml-3 mr-3">Submit</button>
</form>
<%end%>