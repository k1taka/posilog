<%= form_for(@user) do |f| %>
<form >
  <div class="form-group  ml-3 mr-3 mt-3">
    <label for="exampleFormControlInput1">nickname</label>
    <%= f.text_field :nickname,class:"form-control",id:"exampleFormControlInput1",placeholder:"ニックネームを入力してください",value:"#{@user.nickname}"%>
  </div>

  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlTextarea1">自己紹介</label>
    <%= f.text_area :profile,class:"form-control form-control-posinega", id:"exampleFormControlTextarea1",rows:"3" ,value:"#{@user.profile}"%>
  </div>

    <button type="submit" class="btn btn-warning  text-white  ml-3 mr-3" method="patch">Submit</button>
</form>
<%end%>