<%= form_for(@store) do |f| %>
<form >
  <div class="form-group  ml-3 mr-3 mt-3">
    <label for="exampleFormControlInput1">name</label>
    <%= f.text_field :name,class:"form-control",id:"exampleFormControlInput1",placeholder:"名前を入力してください",value:"#{@store.name}"%>
  </div>
  <div class="form-group  ml-3 mr-3 mt-3">
    <label for="exampleFormControlInput1">URL</label>
    <%= f.text_field :url,class:"form-control",id:"exampleFormControlInput1",placeholder:"名前を入力してください",value:"#{@store.url}"%>
  </div>

  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlInput1">店の種類は？</label>
    <%= f.text_field :kind,class:"form-control",id:"exampleFormControlInput1",placeholder:"投稿内容のタイプを入力してください ex)提案 ",value:"#{@store.kind}"%>
  </div>

  <div class="form-group  ml-3 mr-3">
    <label for="exampleFormControlTextarea1">店の紹介</label>
    <%= f.text_area :profile,class:"form-control form-control-posinega", id:"exampleFormControlTextarea1",rows:"3" ,value:"#{@store.profile}"%>
  </div>

    <button type="submit" class="btn btn-warning  text-white  ml-3 mr-3" method="patch">Submit</button>
</form>
<%end%>