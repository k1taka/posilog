<div class= "ml-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control form-control-sm col-5" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control form-control-sm col-5"%>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control form-control-sm col-5"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control form-control-sm col-5"%>
    </div>

    <div class="field">
      <%= f.label :kind %><br />
      <%= f.text_field :kind, autofocus: true, autocomplete: "kind" %>
    </div>

    <div class="field">
      <%= f.label :url %><br />
      <%= f.text_field :url, autofocus: true, autocomplete: "url" ,class:"form-control form-control-sm col-5"%>
    </div>

    <div class="field">
      <%= f.label :profile %><br />
      <%= f.text_area :profile,rows:"3", autofocus: true, autocomplete: "profile",class:"form-control form-control-sm col-5" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" ,class:"btn btn-warning btn-sm mt-2"%>
    </div>
  <% end %>

  <%= render "stores/shared/links" %>

</div>